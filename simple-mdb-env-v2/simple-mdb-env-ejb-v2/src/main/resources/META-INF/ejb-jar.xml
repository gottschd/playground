<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd"
	version="3.1"
	metadata-complete="true">
	<enterprise-beans>
		<session>
			<ejb-name>MyFancyMessageProducerEjb</ejb-name>
			<local-bean/>
			<ejb-class>org.acme.MessageProducerEjb</ejb-class>
			<session-type>Stateless</session-type>
			<timer>
				<schedule>
					<second>*/5</second>
					<minute>*</minute>
					<hour>*</hour>
				</schedule>
				<timeout-method>
					<method-name>myTimer</method-name>
				</timeout-method>
			</timer>
			<env-entry>
				<env-entry-name>MyFancyEnvVar</env-entry-name>
				<env-entry-type>java.lang.String</env-entry-type>
				<env-entry-value>bar</env-entry-value>
				<injection-target>
					<injection-target-class>org.acme.MessageProducerEjb</injection-target-class>
					<injection-target-name>envVar</injection-target-name>
				</injection-target>
			</env-entry>
		</session>
		<message-driven>
			<ejb-name>MyFancyMessageConsumerMdb</ejb-name>
			<ejb-class>org.acme.MessageConsumerMdb</ejb-class>
			<messaging-type>javax.jms.MessageListener</messaging-type>
			<activation-config>
				<activation-config-property>
					<activation-config-property-name>destinationLookup</activation-config-property-name>
					<activation-config-property-value>queue/simpleQ</activation-config-property-value>
				</activation-config-property>
				<activation-config-property>
					<activation-config-property-name>destinationType</activation-config-property-name>
					<activation-config-property-value>javax.jms.Queue</activation-config-property-value>
				</activation-config-property>
			</activation-config>
			<env-entry>
				<env-entry-name>MyFancyEnvVar</env-entry-name>
				<env-entry-type>java.lang.String</env-entry-type>
				<env-entry-value>foo</env-entry-value>
				<injection-target>
					<injection-target-class>org.acme.MessageConsumerMdb</injection-target-class>
					<injection-target-name>envVar</injection-target-name>
				</injection-target>
			</env-entry>
		</message-driven>
	</enterprise-beans>
</ejb-jar>
